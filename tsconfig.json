{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "lib": ["es2018", "dom"],
        "paths": {
            "@core/*": ["src/core/*"],
            "@product/*": ["src/main/product/*"],
            "@env/*": ["src/environments/*"],
            "@common/*": ["src/main/common/*"],
            "@tests/*": ["src/tests/*"],
            "@shared/*": ["src/shared/*"],
            "@site/*": ["src/site/*"],
            "@server/*": ["src/server/*"]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
